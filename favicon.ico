<!DOCTYPE html>
<html>
<head>
    <title>Favicon Generator - Lapa Casa Hostel</title>
    <style>
        body { font-family: Arial, sans-serif; padding: 20px; }
        .canvas-container { margin: 20px 0; }
        canvas { border: 1px solid #ccc; margin: 10px; }
        button { padding: 10px 20px; margin: 5px; background: #007cba; color: white; border: none; cursor: pointer; }
        button:hover { background: #005a87; }
        .preview { display: flex; align-items: center; gap: 10px; margin: 10px 0; }
    </style>
</head>
<body>
    <h1>Favicon Generator - Lapa Casa Hostel</h1>
    
    <div class="canvas-container">
        <h3>Diseño del Favicon:</h3>
        <canvas id="favicon" width="32" height="32"></canvas>
        <canvas id="preview16" width="16" height="16"></canvas>
        
        <div class="preview">
            <span>Vista previa en pestaña:</span>
            <canvas id="tabPreview" width="16" height="16"></canvas>
            <span>Lapa Casa Hostel</span>
        </div>
    </div>
    
    <div>
        <h3>Opciones:</h3>
        <button onclick="drawHouse()">Casa Simple</button>
        <button onclick="drawBed()">Cama</button>
        <button onclick="drawLetter()">Letra "L"</button>
        <button onclick="drawCustom()">Personalizado</button>
    </div>
    
    <div>
        <h3>Descargar:</h3>
        <button onclick="downloadFavicon()">Descargar favicon.ico</button>
        <button onclick="copyBase64()">Copiar Base64</button>
    </div>

    <script>
        const canvas = document.getElementById('favicon');
        const ctx = canvas.getContext('2d');
        const preview16 = document.getElementById('preview16');
        const ctx16 = preview16.getContext('2d');
        const tabPreview = document.getElementById('tabPreview');
        const ctxTab = tabPreview.getContext('2d');

        function drawHouse() {
            ctx.clearRect(0, 0, 32, 32);
            
            // Casa simple
            ctx.fillStyle = '#8B4513'; // Marrón
            ctx.fillRect(6, 18, 20, 12); // Base de la casa
            
            // Techo
            ctx.fillStyle = '#DC143C'; // Rojo
            ctx.beginPath();
            ctx.moveTo(4, 18);
            ctx.lineTo(16, 6);
            ctx.lineTo(28, 18);
            ctx.closePath();
            ctx.fill();
            
            // Puerta
            ctx.fillStyle = '#654321';
            ctx.fillRect(13, 22, 6, 8);
            
            // Ventana
            ctx.fillStyle = '#87CEEB';
            ctx.fillRect(8, 20, 4, 4);
            
            updatePreviews();
        }

        function drawBed() {
            ctx.clearRect(0, 0, 32, 32);
            
            // Cama
            ctx.fillStyle = '#8B4513'; // Marrón
            ctx.fillRect(4, 16, 24, 12); // Colchón
            
            // Cabecera
            ctx.fillStyle = '#654321';
            ctx.fillRect(4, 12, 24, 6);
            
            // Almohada
            ctx.fillStyle = '#F0F8FF';
            ctx.fillRect(6, 14, 8, 4);
            
            updatePreviews();
        }

        function drawLetter() {
            ctx.clearRect(0, 0, 32, 32);
            
            // Letra L
            ctx.fillStyle = '#FF6B35'; // Naranja
            ctx.font = 'bold 24px Arial';
            ctx.textAlign = 'center';
            ctx.fillText('L', 16, 24);
            
            updatePreviews();
        }

        function drawCustom() {
            ctx.clearRect(0, 0, 32, 32);
            
            // Diseño personalizado para hostel
            // Fondo circular
            ctx.fillStyle = '#FF6B35';
            ctx.beginPath();
            ctx.arc(16, 16, 14, 0, 2 * Math.PI);
            ctx.fill();
            
            // Casa estilizada
            ctx.fillStyle = 'white';
            ctx.fillRect(10, 18, 12, 8);
            
            // Techo
            ctx.beginPath();
            ctx.moveTo(8, 18);
            ctx.lineTo(16, 10);
            ctx.lineTo(24, 18);
            ctx.closePath();
            ctx.fill();
            
            // Puerta
            ctx.fillStyle = '#FF6B35';
            ctx.fillRect(14, 20, 4, 6);
            
            updatePreviews();
        }

        function updatePreviews() {
            // Actualizar preview 16x16
            ctx16.clearRect(0, 0, 16, 16);
            ctx16.drawImage(canvas, 0, 0, 32, 32, 0, 0, 16, 16);
            
            // Actualizar tab preview
            ctxTab.clearRect(0, 0, 16, 16);
            ctxTab.drawImage(canvas, 0, 0, 32, 32, 0, 0, 16, 16);
        }

        function downloadFavicon() {
            // Crear canvas 16x16 para el ICO
            const icoCanvas = document.createElement('canvas');
            icoCanvas.width = 16;
            icoCanvas.height = 16;
            const icoCtx = icoCanvas.getContext('2d');
            
            // Dibujar el favicon escalado
            icoCtx.drawImage(canvas, 0, 0, 32, 32, 0, 0, 16, 16);
            
            // Descargar como PNG (más compatible que ICO)
            const link = document.createElement('a');
            link.download = 'favicon.png';
            link.href = icoCanvas.toDataURL('image/png');
            link.click();
            
            alert('Descargado como favicon.png\n\nPara convertir a .ico:\n1. Ve a https://convertico.com/\n2. Sube el archivo PNG\n3. Convierte a ICO\n4. Renombra a favicon.ico');
        }

        function copyBase64() {
            const dataURL = canvas.toDataURL('image/png');
            navigator.clipboard.writeText(dataURL).then(() => {
                alert('Base64 copiado al portapapeles');
            });
        }

        // Dibujar diseño inicial
        drawCustom();
    </script>
</body>
</html>
