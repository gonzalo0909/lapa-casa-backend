  "screenshots": [
    {
      "src": "/screenshots/desktop-booking.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Sistema de reservas - Desktop"
    },
    {
      "src": "/screenshots/mobile-booking.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Sistema de reservas - Mobile"
    },
    {
      "src": "/screenshots/room-selection.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Seleção de quartos"
    },
    {
      "src": "/screenshots/payment-process.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Processo de pagamento"
    }
  ],
  
  "shortcuts": [
    {
      "name": "Nova Reserva",
      "short_name": "Reservar",
      "description": "Criar uma nova reserva",
      "url": "/pt/booking",
      "icons": [
        {
          "src": "/icons/shortcut-booking.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Ver Quartos",
      "short_name": "Quartos",
      "description": "Explorar quartos disponíveis",
      "url": "/pt/rooms",
      "icons": [
        {
          "src": "/icons/shortcut-rooms.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Contato",
      "short_name": "Contato",
      "description": "Entrar em contato",
      "url": "/pt/contact",
      "icons": [
        {
          "src": "/icons/shortcut-contact.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "WhatsApp",
      "short_name": "WhatsApp",
      "description": "Falar via WhatsApp",
      "url": "https://wa.me/5521999999999",
      "icons": [
        {
          "src": "/icons/shortcut-whatsapp.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+booking",
      "url": "/booking?action=%s"
    }
  ],
  
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.lapacasahostel.app",
      "id": "com.lapacasahostel.app"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/lapa-casa-hostel/id123456789",
      "id": "123456789"
    }
  ],
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "handle_links": "preferred",
  
  "captures": [
    {
      "where": "new-booking",
      "types": ["text/plain"]
    }
  ],
  
  "file_handlers": [
    {
      "action": "/open-booking",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ]
}
