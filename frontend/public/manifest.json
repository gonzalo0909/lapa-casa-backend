{
  "name": "Lapa Casa Hostel - Booking Engine",
  "short_name": "Lapa Casa",
  "description": "Sistema de reservas do Lapa Casa Hostel em Santa Teresa, Rio de Janeiro. Especializado em grupos corporativos e eventos com descontos automáticos.",
  "version": "1.0.0",
  "manifest_version": 3,
  
  "start_url": "/",
  "scope": "/",
  "id": "/",
  
