# lapa-casa-hostel-frontend/.env.example

# Archivo de ejemplo de variables de entorno para Lapa Casa Hostel
# Copia este archivo a .env.local y configura los valores apropiados

# API Backend URL
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_API_VERSION=v1

# URLs del Frontend
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME="Lapa Casa Hostel"
NEXT_PUBLIC_SITE_DESCRIPTION="Hostel en Santa Teresa, Rio de Janeiro - Especialistas en grupos"

# Configuración de Pagos
# Obtén tus claves desde https://dashboard.stripe.com/test/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
# Obtén tus claves desde https://www.mercadopago.com.br/developers
NEXT_PUBLIC_MERCADOPAGO_PUBLIC_KEY=TEST-your-mercadopago-public-key-here

# Google Analytics
# Crear cuenta en https://analytics.google.com/
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# WhatsApp Business
# Número de teléfono de WhatsApp del hostel
NEXT_PUBLIC_WHATSAPP_NUMBER=5521999999999
NEXT_PUBLIC_WHATSAPP_MESSAGE="Hola! Me interesa hacer una reserva en Lapa Casa Hostel"

# Google Maps API
# Obtener clave en https://console.cloud.google.com/
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=AIzaSyBxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Configuración de Idiomas
NEXT_PUBLIC_DEFAULT_LOCALE=pt
NEXT_PUBLIC_LOCALES=pt,en,es

# Configuración de Debug (true en desarrollo, false en producción)
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_SHOW_GRID=false

# Variables de entorno
NODE_ENV=development
NEXT_PUBLIC_DEV_TOOLS=true

# Configuración de Booking Engine
NEXT_PUBLIC_MAX_BEDS_PER_BOOKING=38
NEXT_PUBLIC_MIN_NIGHTS=1
NEXT_PUBLIC_MAX_NIGHTS=30
NEXT_PUBLIC_BASE_PRICE=60

# Features Flags
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_CHAT_WIDGET=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Configuración de Cache
NEXT_PUBLIC_CACHE_DURATION=300000
NEXT_PUBLIC_REVALIDATE_TIME=60

# Configuración adicional para producción (descomenta según necesites)
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn-here
# NEXT_PUBLIC_HOTJAR_ID=your-hotjar-id-here
# NEXT_PUBLIC_FACEBOOK_PIXEL_ID=your-facebook-pixel-id-here
