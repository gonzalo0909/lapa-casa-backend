{
  "name": "lapa-casa-hostel-frontend",
  "version": "2.0.0",
  "description": "Sistema de reservas frontend para Lapa Casa Hostel - Rio de Janeiro",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development node server.js",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss src/assets/css/styles.css -o dist/assets/css/styles.min.css --map",
    "build:js": "mkdir -p dist/assets/js && cat src/js/config.js src/js/core/*.js src/js/business/*.js src/js/ui/*.js src/js/security/*.js src/js/main.js > dist/assets/js/bundle.js",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "eslint src/js/**/*.js --fix || true"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gonzalo0909/lapa-casa-backend.git"
  },
  "keywords": [
    "hostel",
    "reservas",
    "booking",
    "rio-de-janeiro",
    "santa-teresa",
    "frontend",
    "pwa"
  ],
  "author": "Lapa Casa Hostel",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "eslint": "^8.52.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
